@model List<Tag>
@{
    ViewData["Title"] = "Index";
}
@section Css{
    <link href="~/Admin/build/css/custom.min.css" rel="stylesheet">
}

<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    @if (User.IsInRole("SuperAdmin"))
                    {
                    <div class="card-header">
                        <a asp-action="Create" data-toggle="tooltip" data-original-title="Create" class="create">
                            <i class="fa-solid fa-square-plus fa-lg" style="color: #1abb9c; font-size: 30px; margin-top: 16px;"></i>
                        </a>
                    </div>
                    }
                    <div class="card-body table-border-style">
                        <div class="table-responsive">
                            @if (Model.Count() > 0)
                            {
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th style="font-size: 20px;">
                                                Name
                                            </th>
                                            <th style="font-size: 20px;">
                                                Options
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var tag in Model)
                                        {
                                            <tr data-id="@tag.Id">
                                                <td>@tag.Name</td>
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@tag.Id" data-toggle="tooltip" data-original-title="Edit">
                                                        <i class="fa-solid fa-pen-to-square" style="color: #16cac7;"></i>
                                                    </a>
                                                    <a class="delete-tag" data-toggle="tooltip" data-original-title="Remove">
                                                        <i class="fa-solid fa-trash" style="color: #da3e45;"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts{
    <script src="~/Admin/src/js/index.js"></script>
}


