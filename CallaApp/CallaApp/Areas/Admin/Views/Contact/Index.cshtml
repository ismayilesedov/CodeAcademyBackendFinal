@model List<Contact>
@{
    ViewData["Title"] = "Index";
}

@section Css{
    <link href="~/Admin/build/css/custom.min.css" rel="stylesheet">
}
<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body table-border-style">
                        <div class="table-responsive">
                            @if (Model.Count() > 0)
                            {
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th style="font-size: 20px;">User Name</th>
                                            <th style="font-size: 20px;">Phone</th>
                                            <th style="font-size: 20px;">Email</th>
                                            <th style="font-size: 20px;">Options</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var contact in Model)
                                        {
                                            <tr data-id="@contact.Id">
                                                <td>@contact.Name</td>
                                                <td>@contact.Phone</td>
                                                <td>@contact.Email</td>
                                                <td>
                                                    <a asp-action="Detail" asp-route-id="@contact.Id" data-toggle="tooltip" data-original-title="Detail">
                                                        <i class="fa-solid fa-circle-info" style="color: #dbd530;"></i>
                                                    </a>
                                                    @if (User.IsInRole("SuperAdmin"))
                                                    {
                                                        <a class="delete-contact" data-toggle="tooltip" data-original-title="Remove">
                                                            <i class="fa-solid fa-trash" style="color: #da3e45;"></i>
                                                        </a>
                                                    }

                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts{
    <script src="~/Admin/src/js/index.js"></script>

}

