@model Author
@{
    ViewData["Title"] = "Detail";
}

<div class="container my-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="font-size: 20px;">
                    Image
                </th>
                <th style="font-size: 20px;">
                    Name
                </th>
                <th style="font-size: 20px;">
                    E-mail
                </th>
            </tr>
        </thead>

        <tbody>
            <tr style="font-size: 18px">
                <td class="py-1">
                    <img src="~/assets/images/@Model.Image" style="width:250px;height:200px" />
                </td>
                <td class="py-1">
                    @Model.Name
                </td>
                <td class="py-1">
                    @Model.Email
                </td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-info mt-3" asp-action="Index">Back</a>
</div>







