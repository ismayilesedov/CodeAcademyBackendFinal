@model BlogDetailVM
@{
    ViewData["Title"] = "Detail";
}
@section Css{
    <link href="~/Admin/build/css/custom.min.css" rel="stylesheet">
}
<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="row">
            <div class="col-12">
                <label class="mt-3">Blog's images</label>

                <div class="d-flex align-items-center images">
                    @foreach (var item in Model?.BlogImages)
                    {
                        <div style="width:200px; margin-right:10px;" data-id="@item.Id">
                            <img class="img-fluid" src="~/assets/images/@item.Image" />
                        </div>
                    }
                </div>
                <span class="text-danger "></span>
                <form method="post" enctype="multipart/form-data" asp-action="Edit">
                    <span class="text-danger">@ViewBag.error</span>
                    <div class="form-group">
                        <label class="mt-3">Title</label>
                        <input disabled class="form-control" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label class="mt-3">Author name</label>
                        <input disabled class="form-control" asp-for="AuthorName">
                    </div>
                    <div class="form-group">
                        <label class="mt-3">Description</label>
                        <textarea disabled class="form-control" rows="3" asp-for="Description"></textarea>
                    </div>
                    <a asp-action="Index" class="btn btn-success"><i class="feather mr-2 icon-check-circle"></i>Go to list</a>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/Admin/src/js/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}


