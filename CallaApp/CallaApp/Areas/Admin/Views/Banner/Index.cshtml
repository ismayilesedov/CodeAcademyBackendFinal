@model List<Banner>
@{
    ViewData["Title"] = "Index";
}
@section Css{
    <link href="~/Admin/build/css/custom.min.css" rel="stylesheet">
}

<div class="container my-5">
    @if (User.IsInRole("SuperAdmin"))
    {
        <div class="card-header">
            <a asp-action="Create" data-toggle="tooltip" data-original-title="Create" class="create">
                <i class="fa-solid fa-square-plus fa-lg" style="color: #1abb9c; font-size: 30px; margin-top: 16px;"></i>
            </a>
        </div>
    }
    <div class="table-responsive">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th style="font-size: 20px;">
                            Image
                        </th>
                        <th style="font-size: 20px;">
                            Large or Small
                        </th>
                        <th style="font-size: 20px;">
                            Options
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var banner in Model)
                    {
                        <tr data-id="@banner.Id">
                            <td class="py-1">
                                <img src="~/assets/images/@banner.Image" style="width: 170px; height: 120px" alt="image" />
                            </td>
                            @if (@banner.IsLarge)
                            {
                                <td>Large</td>
                            }
                            else
                            {
                                <td>Small</td>
                            }
                            <td>
                                <a asp-action="Detail" asp-route-id="@banner.Id" data-toggle="tooltip" data-original-title="Detail">
                                    <i class="fa-solid fa-circle-info" style="color: #dbd530;"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@banner.Id" data-toggle="tooltip" data-original-title="Edit">
                                    <i class="fa-solid fa-pen-to-square" style="color: #16cac7;"></i>
                                </a>
                                <a class="delete-banner" data-toggle="tooltip" data-original-title="Remove">
                                    <i class="fa-solid fa-trash" style="color: #da3e45;"></i>
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@section Scripts{
    <script src="~/Admin/src/js/index.js"></script>
}

