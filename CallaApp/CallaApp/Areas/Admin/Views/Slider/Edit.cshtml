@model SliderUpdateVM
@{
    ViewData["Title"] = "Edit";
}


<div class="container mt-5">

    <div class="img-detail">
        <img src="~/assets/images/@Model.Image" style="width: 250px; height: 250px;" />

    </div>
    <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">

        <div class="form-group mt-5">
            <label for="formFile" class="form-label">Choose an image for blog</label>
            <input class="form-control" type="file" id="formFile" asp-for="Photo" />
        </div>

        <div class="form-group mt-5">
            <label for="formFile" class="form-label">Add title</label>
            <input class="form-control" type="text" id="formFile" asp-for="Title">
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label">Add description</label>
            <textarea class="form-control" id="description-text" asp-for="Description" rows="5"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <button asp-action="Index" class="btn btn-light">Cancel</button>
    </form>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}